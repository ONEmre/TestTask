<style>
.product-features {
  background-color: rgb(var(--color-background));
  color: rgb(var(--color-foreground));
}

.product-features--full-width {
  width: 100%;
}

.product-features__container {
  margin: 0 auto;
}

.product-features__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  align-items: start;
}

.product-features__item {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: left;
  padding: 1.5rem;
  background-color: transparent;
  border-radius: 8px;
  transition: transform 0.3s ease;
}

.product-features__item:hover {
  transform: translateY(-2px);
}

.product-features__icon {
  margin-bottom: 0;
  margin-right: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 57px;
  height: 57px;
  flex-shrink: 0;
}

.product-features__icon svg {
  color: rgb(var(--color-foreground));
  opacity: 0.8;
}

.product-features__icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.product-features__content {
  width: 100%;
}

.product-features__heading {
  font-family: 'Montserrat';
  font-size: 18px;
  font-weight: 500;
  line-height: 22px;
  text-align: left;
  color: #000;
  letter-spacing: 0;
  margin: 0 0 0.5rem 0;
}

.product-features__text {
  font-family: 'Montserrat';
  font-size: 18px;
  font-weight: 400;
  line-height: 22px;
  text-align: left;
  color: #383838;
  margin: 0;
}

/* Mobile Optimierungen */
@media screen and (max-width: 749px) {
  .product-features__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .product-features__item {
    padding: 1rem;
    flex-direction: row; 
  }
  
  .product-features__icon {
    width: 48px;
    height: 48px;
    margin-right: 0.75rem;
  }
  
  .product-features__heading {
    font-size: 16px;
    line-height: 19px;
  }
  
  .product-features__text {
    font-size: 16px;
    line-height: 19px;
  }
}


@media screen and (min-width: 750px) and (max-width: 989px) {
  .product-features__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (min-width: 990px) {
  .product-features__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
</style>

<div class="product-features{% if section.settings.full_width %} product-features--full-width{% endif %}">
  <div class="product-features__container page-width">
    <div class="product-features__grid">
      {%- for block in section.blocks -%}
        <div class="product-features__item" {{ block.shopify_attributes }}>
          <div class="product-features__icon">
            {%- if block.settings.icon_image != blank -%}
              {{- block.settings.icon_image | image_url: width: 60 | image_tag: loading: 'lazy', alt: block.settings.heading -}}
            {%- else -%}
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <path d="9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {%- endif -%}
          </div>
          <div class="product-features__content">
            {%- if block.settings.heading != blank -%}
              <h3 class="product-features__heading">{{ block.settings.heading }}</h3>
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <p class="product-features__text">{{ block.settings.text }}</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

